{
  "name": "foodbank/manager",
  "description": "WordPress plugin: FoodBank Manager",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": "^8.1",
    "endroid/qr-code": "^4",
    "league/csv": "^9",
    "mpdf/mpdf": "^8"
  },
  "autoload": {
    "psr-4": {
      "FBM\\": "includes/",
      "FoodBankManager\\": "includes/"
    }
  },
  "autoload-dev": {
    "files": [
      "tests/Support/WPStubs.php",
      "tests/Support/Rbac.php",
      "phpstan-bootstrap.php"
    ]
  },
  "require-dev": {
    "cebe/markdown": "^1.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "paragonie/sodium_compat": "^1",
    "php-stubs/wordpress-stubs": "^6",
    "phpcompatibility/php-compatibility": "^9",
    "phpcompatibility/phpcompatibility-wp": "^2",
    "phpstan/extension-installer": "^1",
    "phpstan/phpstan": "^1",
    "phpunit/phpunit": "^9.6",
    "slevomat/coding-standard": "^8",
    "squizlabs/php_codesniffer": "^3",
    "symfony/console": "^6",
    "symfony/process": "^6",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "wp-cli/i18n-command": "^2",
    "wp-cli/wp-cli": "^2",
    "wp-coding-standards/wpcs": "^3"
  },
  "suggest": {
    "woocommerce/action-scheduler": "Background jobs for exports, email retries, key rotation",
    "endroid/qr-code": "QR code generation for attendance tokens",
    "league/csv": "Robust CSV writer for exports"
  },
  "scripts": {
    "lint": "find . -name '*.php' -not -path './vendor/*' -print0 | xargs -0 -n1 php -l",
    "phpcs": "vendor/bin/phpcs --standard=phpcs.xml --report=summary --report-width=120",
    "phpcs:lanes": "vendor/bin/phpcs --standard=phpcs.xml --report=summary --report-full=stdout --report=json --report-file=build/phpcs-lanes.json includes/Core includes/UI includes/Attendance templates tests",
    "phpcs:repo": "php -d memory_limit=1024M vendor/bin/phpcs --standard=phpcs.xml --report=summary --report=source --report=json --report-file=build/phpcs-repo.json . --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1",
    "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml",
    "phpstan": "phpstan analyse -c phpstan.neon --no-progress --memory-limit=1G",
    "phpstan:fast": "phpstan analyse -c phpstan.neon --no-progress --level=5 --memory-limit=1G",
    "phpstan:debug": "phpstan analyse -c phpstan.neon --debug --no-progress --memory-limit=1G",
    "test": "phpunit",
    "release:patch": "php bin/bump-version.php patch && php bin/changelog.php",
    "release:minor": "php bin/bump-version.php minor && php bin/changelog.php",
    "release:major": "php bin/bump-version.php major && php bin/changelog.php",
    "release:set": "php bin/bump-version.php set",
    "release:tagless": "php bin/bump-version.php patch --no-tag && php bin/changelog.php",
    "cs:report": "php -d memory_limit=512M vendor/bin/phpcs --standard=phpcs.xml -q --report=full --report-file=./phpcs-report.txt",
    "cs:fix": "composer phpcbf && composer phpcs || true",
    "qa": "composer phpcs && composer phpstan && composer test",
    "qa:fast": "composer phpcs && composer phpstan:fast && composer test",
    "build:zip": "bash bin/package.sh",
    "i18n:pot": "FBM_SKIP_ABSPATH=1 WP_CLI_ALLOW_ROOT=1 wp i18n make-pot . languages/foodbank-manager.pot --skip-plugins --skip-themes --exclude=vendor,dist,node_modules",
    "i18n:mo": "FBM_SKIP_ABSPATH=1 WP_CLI_ALLOW_ROOT=1 wp i18n make-mo languages languages --skip-plugins --skip-themes",
    "i18n:build": [
      "@i18n:pot",
      "@i18n:mo"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true
  },
  "version": "2.0.2"
}
