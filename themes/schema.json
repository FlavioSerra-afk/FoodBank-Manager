{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "style", "preset", "accent", "glass"],
  "additionalProperties": false,
  "properties": {
    "version": {"const": 1},
    "style": {"enum": ["glass", "basic"]},
    "preset": {"enum": ["light", "dark", "high_contrast"]},
    "accent": {"type": "string", "pattern": "^#[0-9A-Fa-f]{6}$"},
    "glass": {
      "type": "object",
      "required": ["alpha", "blur", "elev", "radius", "border"],
      "additionalProperties": false,
      "properties": {
        "alpha": {"type": "number", "minimum": 0, "maximum": 1},
        "blur": {"type": "integer", "minimum": 0, "maximum": 20},
        "elev": {"type": "integer", "minimum": 0, "maximum": 24},
        "radius": {"type": "integer", "minimum": 6, "maximum": 20},
        "border": {"type": "integer", "minimum": 1, "maximum": 2}
      }
    }
  }
}
