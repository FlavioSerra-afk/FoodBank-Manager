<?xml version="1.0"?>
<ruleset name="FoodBank-Manager Lanes">
  <!-- Base (lean, safe) -->
  <rule ref="WordPress-Core">
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>
  <!-- Curated extras; keep on for safety, weâ€™ll relax surgically if needed -->
  <rule ref="WordPress-Extra">
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>

  <!-- Lanes to keep green -->
  <file>includes/Core</file>
  <file>includes/UI</file>
  <file>includes/Attendance</file>
  <file>templates</file>
  <file>tests</file>

  <!-- Hard excludes -->
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>dist/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>
  <exclude-pattern>.github/*</exclude-pattern>

  <!-- Relax noisy rules -->
  <exclude name="WordPress.PHP.YodaConditions"/>
  <rule ref="WordPress.DB.PreparedSQL">
    <severity>0</severity>
  </rule>
  <rule ref="WordPress.DB.PreparedSQLPlaceholders">
    <severity>0</severity>
  </rule>
  <rule ref="WordPress.Files.FileName">
    <severity>0</severity>
  </rule>

  <!-- Enforce WordPress spacing rules that we can auto-fix -->
  <rule ref="WordPress.WhiteSpace.ControlStructureSpacing"/>

  <rule ref="WordPress.WhiteSpace.OperatorSpacing">
    <properties>
      <!-- disallow missing space before/after operators -->
      <property name="ignoreNewlines" value="false"/>
    </properties>
  </rule>

  <!-- (Enable only if tests block green)
  <rule ref="Generic.Files.LineLength">
    <type>warning</type>
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>
  -->
</ruleset>
