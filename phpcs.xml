<?xml version="1.0"?>
<ruleset name="FoodBank Manager">
  <description>Scoped, stable PHPCS config that won't reformat the whole repo.</description>

  <rule ref="WordPress-Core"/>
  <rule ref="WordPress-Docs"/>
  <rule ref="WordPress-Extra"/>

  <!-- Minimal spacing rules we actually want -->
  <rule ref="Squiz.ControlStructures.ControlSignature"/>
  <rule ref="WordPress.WhiteSpace.OperatorSpacing">
    <properties>
      <property name="ignoreNewlines" value="false"/>
    </properties>
  </rule>

  <!-- Limit to these directories -->
  <file>includes</file>
  <file>templates</file>
  <file>assets</file>
  <file>bin</file>
  <file>tests</file>

  <!-- Donâ€™t scan built artifacts or vendor -->
  <exclude-pattern>^dist/</exclude-pattern>
  <exclude-pattern>^vendor/</exclude-pattern>
</ruleset>
