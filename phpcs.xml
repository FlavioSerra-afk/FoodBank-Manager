<?xml version="1.0"?>
<ruleset name="FoodBank Manager">
  <description>WordPress coding standards for core plugin files.</description>

  <rule ref="WordPress"/>

  <file>includes</file>
  <file>templates</file>
  <file>foodbank-manager.php</file>
  <file>uninstall.php</file>

  <exclude-pattern>^vendor/</exclude-pattern>
  <exclude-pattern>^node_modules/</exclude-pattern>
  <exclude-pattern>^dist/</exclude-pattern>
  <exclude-pattern>^build/</exclude-pattern>
  <exclude-pattern>^assets/.*/vendor/</exclude-pattern>
  <exclude-pattern>^languages/.*\.(po|pot)$</exclude-pattern>
  <exclude-pattern>^tests/</exclude-pattern>

  <arg name="report-width" value="120"/>
  <arg name="encoding" value="utf-8"/>
  <arg name="parallel" value="8"/>
  <config name="testVersion" value="8.1-8.2"/>
</ruleset>
